<div class="container">
   <h1>Daftar Pelanggan</h1>

   <table class="table table-bordered">
     <thead>
        <tr>
           <th>
              <%= link_to new_client_path, class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-plus"> Tambah Pelanggan</i>
              <% end %>
           </th>
        </tr>
       <tr>
         <th>Nama</th>
         <th>No Handphone</th>
         <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @clients.each do |c| %>
       <tr>
         <td><%= c.full_name %></td>
         <td><%= c.phone_number %></td>
            <td>
               <%= link_to client_path(c), class: "btn btn-default" do %>
               <i class="glyphicon glyphicon-eye-open"> Detail</i>
              <% end %>
            </td>
            <td>
               <%= link_to edit_client_path(c), class: "btn btn-default" do %>
               <i class="glyphicon glyphicon-pencil"> Ubah</i>
              <% end %>
            </td>
            <td>
               <%= link_to client_path(c), method: :delete, data: { confirm: 'apakah anda yakin ingin menghapus klient ini?' }, class: "btn btn-default" do %>
               <i class="glyphicon glyphicon-trash"> Hapus</i>
              <% end %>
            </td>
         </tr>
       <% end %>
     </tbody>
   </table>
</div>
