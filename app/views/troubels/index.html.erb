<div class="container">
   <div class="row">
      <div class="col-md-12 col-sm-12">
         <h1>Daftar Permasalah Servis</h1>
         <table class="table table-bordered">
           <thead>
              <tr>
                 <th>
                    <%= link_to new_troubel_path, class: "btn btn-default" do %>
                    <i class="glyphicon glyphicon-pencil"></i> Tambah Permasalahan
                    <% end %>
                 </th>
              </tr>
             <tr>
               <th>Nama</th>
               <th>Tingkat Kesulitan</th>
               <th>Harga</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
             <% @troubels.each do |t| %>
               <tr>
                  <td><%= t.name %></td>
                  <td><%= t.grade %></td>
                  <td><%= t.price %></td>
                  <td><%= link_to edit_troubel_path(t), class: "btn btn-default" do%>
                     <i class="glyphicon glyphicon-cog"></i> Ubah
                     <% end %>
                  </td>
                  <td>
                     <%= button_to troubel_path(t), method: :delete, data: { confirm: 'Apakah anda yakin ingin menghapus ini?' }, class: "btn btn-danger" do %>
                     <i class="glyphicon glyphicon-trash"></i> Hapus
                    <% end %>
                  </td>
               </tr>
             <% end %>
           </tbody>
         </table>
      </div>
   </div>
</div>
