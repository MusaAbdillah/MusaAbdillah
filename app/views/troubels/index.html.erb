<div class="container">
   <h1>Daftar Troubels</h1>

   <table class="table table-bordered">
     <thead>
        <tr>
           <th>
              <%= link_to new_troubel_path, class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-plus"> Tambah Permasalahan</i>
              <% end %>
           </th>
        </tr>
       <tr>
         <th>Nama</th>
         <th>Tingkat Kesulitan</th>
         <th>Harga</th>
         <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @troubels.each do |t| %>
         <tr>
            <td><%= t.name %></td>
            <td><%= t.grade %></td>
            <td><%= t.price %></td>
            <td><%= link_to edit_troubel_path(t), class: "btn btn-default" do%>
               <i class="glyphicon glyphicon-pencil"> Ubah</i>
               <% end %>
            </td>
            <td>
               <%= link_to troubel_path(t), method: :delete, data: { confirm: 'Apakah anda yakin ingin menghapus ini?' }, class: "btn btn-default" do %>
               <i class="glyphicon glyphicon-trash"> Hapus</i>
              <% end %>
            </td>
         </tr>
       <% end %>
     </tbody>
   </table>
</div>
