<div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
   <h1>Form Permasalahan</h1>
   <div class="panel panel-default">
   <!-- Default panel contents -->
      <div class="panel-body">

         <div class="col-md-9 col-sm-9">

            <%= form_for(@troubel) do |s| %>
            <div class="form-group">
               <%= s.label :Nama, class: "control-label"%>
               <%= s.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
               <%= s.label :Tingkat_Kesulitan, class: "control-label"%>
               <%= s.text_field :grade, class: "form-control" %>
            </div>
            <div class="form-group">
               <%= s.label :Harga, class: "control-label"%>
               <%= s.text_field :price, class: "form-control" %>
            </div>
               <%= s.submit "Simpan", class: "btn btn-default btn-lg" %>
            <% end %>
         </div>
      </div>
   </div>
</div><!-- col-md-12 -->
