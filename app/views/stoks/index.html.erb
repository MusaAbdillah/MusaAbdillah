
 <!-- searching & Sorting navigation  -->

<!-- panel stok -->
<% if @stoks.size == 0 %>
  <p class="text-center"> Tidak ada produk yang siap di jual untuk saat ini </p>
<% else %>
<div class="col-md-12">
  <div class="container-fluid">
      <div class="col-md-12">
        <div class="input-group" id="form-search">
          <%= search_form_for @search do |f| %>
          <%= f.text_field :nama_cont, placeholder: "cari stok", class: "form-control" %>
          <span class="input-group-btn">
          <%= f.submit "Cari" , class: "btn btn-danger", id: "btn-search" %>
          </span>
        <% end %>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->

    <% @stoks.each do |stok| %>
      <%= render "product_row", stok: stok, order_item: @order_item %>
      <% end %>

<% end %>
</div>

  <nav class="pagination pull-right">
    <ul class="pagination-xs">
      <nav aria-label="...">
        <ul class="pager">
          <li><%= link_to_previous_page (@stoks),'Sebelumnya' %></li>
          <li><%= link_to_next_page (@stoks),'Selanjutnya' %></li>
        </ul>
      </nav>
    </ul>
  </nav>

</div>
<!--ini file css -->
<style>

#btn-search {
  background:#e60000;
  color: white;
  margin-top: 5px;
  margin-bottom: 10px;
  margin-left: 0px;
  align:  right;
}
#btn-search:hover {
  opacity: 0.8;
}
#form-search {
  width: 100%;
}
</style>
