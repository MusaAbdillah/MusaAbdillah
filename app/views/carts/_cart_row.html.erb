  <div class="row">
    <div class="col-xs-6">
      <h4><%= stok.nama %></h4>
    </div>
    <div class="col-xs-6">
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Harga: <span style="color: #e60000;">Rp <%= number_with_delimiter(order_item.unit_price, :delimiter => '.') %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :stok_id, value: stok.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Perbarui Jumlah", class: "btn btn-default" %>
              <%= link_to "Hapus", order_item, { data: { confirm: "Apakah anda yakin akan menghapus'#{order_item.stok.nama}' dari keranjang?", cancel: "Batal", commit: "Ya" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Harga: <span style="color: #e60000;"><%= number_with_delimiter(order_item.total_price, :delimiter => '.') %></span></h4>
      <% end %>
    </div>
  </div>
