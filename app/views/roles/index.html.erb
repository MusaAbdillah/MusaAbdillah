<div class="col-md-12 col-sm12">
   <div class="container">
      <div class="row">
         <table class="table table-bordered">
            <thead>
               <tr>
                  <th colspan="3">
                     <%= link_to new_role_path(@role), class: "btn btn-default" do %>
                        <i class="glyphicon glyphicon-plus"> Tambah</i>
                        <% end %>
                  </th>
               </tr>
               <tr>
                  <th colspan="3">
                     Daftar Hak Akses
                  </th>
               </tr>
               <tr>
                  <th>
                     ID
                  </th>
                  <th>
                     Nama Hak Akses
                  </th>
                  <th>
                  </th>
               </tr>
            </thead>
            <tbody>
               <% @roles.each do |r| %>
               <tr>
                  <td>
                     <%= r.id %>
                  </td>
                  <td>
                     <%= r.nama %>
                  </td>
                  <td>
                     <%= link_to role_path(r), method: :delete, data: {confirm: "Apakah anda yakin ingin menghapus role ini?"}, class:"btn btn-default" do %>
                        <i class="glyphicon glyphicon-trash"> Hapus</i>
                        <% end %>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>

         <h3>Daftar Akun dan Hak Akses</h3>
         <table class="table table-bordered">
            <thead>
               <tr>
                  <th>
                     Email
                  </th>
                  <th>
                     Hak Akses
                  </th>
                  <th>
                  </th>
               </tr>
            </thead>
            <tbody>
               <% @users.each do |r| %>
               <tr>
                  <td>
                     <%= r.email %>
                  </td>
                  <td>
                     <%= r.role_id %>
                  </td>
                  <td>
                     <%= link_to edit_user_registration_path(r), class: "btn btn-default" do %>
                     <i class="glyphicon glyphicon-pencil"> Ubah</i>
                     <% end %>
                  </td>
               </tr>
               <% end %>
               <%%>
            </tbody>
         </table>
      </div>
   </div>
</div>
