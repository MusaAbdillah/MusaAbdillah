<div class="col-md-12 col-sm-12">
<div class="container">
<div class="col-md-8 col-sm-offset-2">
<h1>Pengaturan Akun</h1>
<div class="panel panel-default">
  <div class="panel-body">
<div class="form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset disabled>
  <div class="form-group">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "disabledTextInput" %>
  </div>
  </div>
  </fieldset>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
  <div class="field">
    <%= f.label :kata_sandi %> <i>(kosongkan jika anda tidak ingin mengubah kata sandi)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em>minimal <%= @minimum_password_length %> karakter </em>
    <% end %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :konfirmasi_kata_sandi %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :kata_sandi_lama %> <i>(kami membutuhkan kata sandi anda saat ini untuk konfirmasi perubahan)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Simpan", class: "btn btn-default btn-lg" %>
  </div>
<% end %>
</div>
<p>Kurang Puas? <%= button_to "Hapus Akun", registration_path(resource_name), data: { confirm: "Apakah anda yakin?" }, method: :delete, class: "btn btn-default btn-xs" %></p>
<%= link_to "Kembali", :back, class: "btn btn-default btn-xs" %>
</div>
</div>
</div>
</div>
</div>
