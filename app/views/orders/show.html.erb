<div class="container">
   <div class="row">
      <div class="col-md-12 col-sm-12">
         <h3><strong>Detail Transaksi #<%= @order.id %></strong></h3>
         <div class="table-responsive">
            <table class="table table-striped">
               <thead>
                  <tr>
                     <td><strong>Nama</strong></td>
                     <td></td>
                     <td><strong>Harga per Unit</strong</td>
                     <td><strong>Jumlah</strong></td>
                     <td></td>
                     <td class="text-right"><strong>Subtotal</strong></td>
                  </tr>
               </thead>
               <tbody>
               <% @order_items.each do |oi|%>
                  <tr>
                     <td><%= oi.stok.nama %></td>
                     <td><%= image_tag oi.stok.gambar_url(:thumb) %></td>
                     <td>Rp <%= number_with_delimiter(oi.unit_price, :delimiter => '.') %></td>
                     <td><%= oi.quantity %></td>
                     <td>Rp <%= number_with_delimiter(oi.unit_price, :delimiter => '.') %> x <%= oi.quantity %></td>
                     <td class="text-right">Rp <%= number_with_delimiter(oi.total_price, :delimiter => '.') %></td>
                  </tr>
               <% end %>
                  <tr class="text-right">
                     <td colspan="4"><h4><strong>TOTAL</strong></h4></td>
                     <td colspan="2">
                        <h4>
                           <strong>
                              Rp <%= number_with_delimiter(@order.total, :delimiter => '.') %>
                           </strong>
                        </h4>
                     </td>
                  </tr>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
