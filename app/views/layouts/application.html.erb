<!DOCTYPE html>
<html>
   <head>
      <title>Abcom</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
   </head>
   <body>

   <!-- flash messages -->
      <div class="col-md-12 flash-messages">
         <div class="row">
            <%= flash_messages %>
         </div>
      </div>

      <!-- body-->
      <div class="row">
         <div class="col-md-12">
            <div class="navbar navbar-fixed-top" role="navigation">
               <div class="navbar-header">
                  <a class="navbar-brand" href="/stoks">AB Computer</a>
               </div>
               <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
            	     <%= render 'layouts/global_nav' %>
                  <% else %>
            	     <%= render 'layouts/header_login' %>
                  <% end %>
               </ul>
           </div>
         </div>
      </div>

      <%= yield %>

   </body>
   <!-- footer -->
   <div class="row">
      <div class="col-md-12">
         <div class="footer footer-fixed-bottom" >
            <div class="col-md-4">
               <p class="text-muted">&copy 2016 AB Computer</p>
            </div>
            <div class="col-md-8 text-right">
            </div>
         </div>
      </div>
   </div>
</html>
