<!DOCTYPE html>
<html>
<head>
  <title>Abcom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- flash messages -->
<div class="col-md-12" style="padding-top: 80px;">
  <div class="row">
  <%= flash_messages %>
  </div>
</div>

 <!-- body-->
 <div class="container">
 <div class="navbar navbar-fixed-top" role="navigation" style="background-color: #e60000; color: white;">
         <div class="navbar-header">
            <a class="navbar-brand" href="/stoks">AB Computer</a>
         </div>
         <ul class="nav navbar-nav">
         </ul>
         <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            	<%= render 'layouts/global_nav' %>
            <% else %>
            	<%= render 'layouts/header_login' %>
            <% end %>
         </ul>
       </div>
    </div>
<%= yield %>
</body>
<!-- footer -->
<div class="footer footer-fixed-bottom">
  <div class="container">
    <div class="col-sm-4">
      <p class="text-muted">&copy 2016 AB Computer</p>
    </div>
    <div class="col-sm-8">
    </div>
  </div>
</div>
</html>
